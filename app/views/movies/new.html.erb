<h2>Add a New Movie</h2>

<%= form_with model: @movie, local: true, class: "mt-3" do |form| %>
  <div class="mb-3">
    <%= form.label :title, "Movie Title:", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :genre, "Genre:", class: "form-label" %>
    <%= form.text_field :genre, class: "form-control" %>
  </div>
  <%= form.submit "Add Movie", class: "btn btn-success" %>
<% end %>

<%= link_to "Back to Movies", movies_path, class: "btn btn-secondary mt-3" %>
